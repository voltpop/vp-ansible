services:
  db:
    image: mysql:5.7
    restart: always
    environment:
      MYSQL_RANDOM_ROOT_PASSWORD: 1
      MYSQL_DATABAE: "{{ customer.vars.postfix.db }}" # postfixadmin
      MYSQL_USER: "{{ customer.vars.postfix.db_user }}" # postfixadmin
      MYSQL_PASSWORD: "{{ customer.vars.postfix.db_pass }}"

  postfixadmin:
    depends_on:
      - db
    image: postfixadmin
    ports:
      - 8000:80
    restart: always
    environment:
      POSTFIXADMIN_DB_TYPE: mysqli
      POSTFIXADMIN_DB_HOST: db
      POSTFIXADMIN_DB_USER: "{{ customer.vars.postfix.db_user }}" # postfixadmin
      POSTFIXADMIN_DB_NAME: "{{ customer.vars.postfix.db }}" # postfixadmin
      POSTFIXADMIN_DB_PASSWORD: "{{ customer.vars.postfix.db_pass }}"
